@model KVA.Cinema.Models.ViewModels.Video.VideoDisplayViewModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Are you sure you want to delete this video?</h3>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <div style="display:flex">
            <div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Name)
                    @Html.DisplayFor(model => model.Name, additionalViewData: new { @class = "form-control" })
                </div>
            </div>
        </div>
    </fieldset>

    <p>
        <input type="submit" value="Delete" /> | @Html.ActionLink("Back to List", "Index")
    </p>
}

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
