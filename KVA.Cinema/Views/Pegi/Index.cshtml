@model IEnumerable<KVA.Cinema.Models.ViewModels.Pegi.PegiDisplayViewModel>
@using KVA.Cinema.Models.ViewModels.Pegi;

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<h1>Index</h1>

@if (User.Identity.IsAuthenticated)
{
    <p>
        @Html.ActionLink("Create New", "Create", "Pegi", null, new { @class = "btn btn-primary" })
    </p>
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.ActionLink(
                    ViewBag.SortingField == PegiSort.Type
                    ? $"Type {(ViewBag.SortDescending ? "▾" : "▴")}"
                    : "Type",
                    "Index", new { sortingField = PegiSort.Type, isSortDescending = (ViewBag.SortingField == PegiSort.Type && !ViewBag.SortDescending) })
            </th>
            @if (User.Identity.IsAuthenticated)
            {
                <th><!--Header for Action links--></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Type)
                </td>

                @if (User.Identity.IsAuthenticated)
                {
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { Id = item.Id }) |
                        @Html.ActionLink("Details", "Details", new { Id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { Id = item.Id })
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
