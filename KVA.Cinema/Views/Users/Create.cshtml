@model KVA.Cinema.Models.User.UserCreateViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>User</legend>

        <div class="form-group">
            @Html.LabelFor(model => model.FirstName)
            @Html.EditorFor(model => model.FirstName, additionalViewData: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.FirstName)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.LastName)
            @Html.EditorFor(model => model.LastName, additionalViewData: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.LastName)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Nickname)
            @Html.EditorFor(model => model.Nickname, additionalViewData: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Nickname)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email)
            @Html.EditorFor(model => model.Email, additionalViewData: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Email)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.BirthDate)
            @Html.EditorFor(model => model.BirthDate, additionalViewData: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.BirthDate)
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Password)
            @Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password", id = "password" })
            @Html.ValidationMessageFor(model => model.Password)
        </div>
        <input type="checkbox" onclick="togglePassword()">Show Password
        <div class="form-group">
            @Html.LabelFor(model => model.PasswordConfirm)
            @Html.TextBoxFor(model => model.PasswordConfirm, new { @class = "form-control", @type = "password", id = "passwordConfirm" })
            @Html.ValidationMessageFor(model => model.PasswordConfirm)
        </div>
    </fieldset>

    <p>
        <input type="submit" value="Create" />
    </p>

    @Html.ActionLink("Back to Main page", "Index", "Home", null, new { @class = "btn btn-primary" })
}

@section Scripts
{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script type="text/javascript">
        function togglePassword() {
            var passwordFields = document.querySelectorAll('#password, #passwordConfirm');
            passwordFields.forEach(function (field) {
                if (field.type === "password") {
                    field.type = "text";
                } else {
                    field.type = "password";
                }
            });
        }
    </script>
}
