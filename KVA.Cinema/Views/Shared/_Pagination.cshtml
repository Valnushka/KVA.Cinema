@{
    var prevDisabled = !Model.HasPreviousPage() ? "disabled" : "";
    var nextDisabled = !Model.HasNextPage() ? "disabled" : "";
}

@Html.ActionLink("«", "Index",
                new
                {
                    pageNumber = 1,
                    searchString = ViewBag.CurrentFilter,
                    sortColumn = ViewBag.SortColumn,
                    isSortDescending = ViewBag.IsSortDescending
                },
                new { @class = $"btn btn-light { prevDisabled }" })

@Html.ActionLink("<", "Index",
                 new
                 {
                     pageNumber = Model.PageIndex - 1,
                     searchString = ViewBag.CurrentFilter,
                     sortColumn = ViewBag.SortColumn,
                     isSortDescending = ViewBag.IsSortDescending
                 },
                 new { @class = $"btn btn-light { prevDisabled }" })

@Html.ActionLink(">", "Index",
                 new
                 {
                     pageNumber = Model.PageIndex + 1,
                     searchString = ViewBag.CurrentFilter,
                     sortColumn = ViewBag.SortColumn,
                     isSortDescending = ViewBag.IsSortDescending
                 },
                 new { @class = $"btn btn-light { nextDisabled }" })

@Html.ActionLink("»", "Index",
                 new
                 {
                     pageNumber = Model.PagesTotal,
                     searchString = ViewBag.CurrentFilter,
                     sortColumn = ViewBag.SortColumn,
                     isSortDescending = ViewBag.IsSortDescending
                 },
                 new { @class = $"btn btn-light { nextDisabled }" })
